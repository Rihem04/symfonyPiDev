    <table class="table">
        <thead>
            <tr>
                <th>IdProjet</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Competence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.idProjet }}</td>
                <td>{{ projet.titre }}</td>
                <td>{{ projet.description }}</td>
                <td>{{ projet.prix }}</td>
                <td>{{ projet.competence }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'idProjet': projet.idProjet}) }}">show</a>
                    <a href="{{ path('app_projet_edit', {'idProjet': projet.idProjet}) }}">edit</a>
                </td>
            </tr>
