{% block title %}New DemandeClient
{% endblock %}

{% block body %}

	<div>
		<h1>liste des utilisateurs</h1>

		<table class="table" border="2">
			<thead>
				<tr>
					<th>id</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Mail</th>
					<th>Numero_telephone</th>
					<th>Addresse</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.nom }}</td>
						<td>{{ user.prenom }}</td>
						<td>{{ user.mail }}</td>
						<td>{{ user.numeroTelephone }}</td>
						<td>{{ user.addresse }}</td>
						<td>
							
							<a href="{{ path('app_usershow', {'id': user.id}) }}">select</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
