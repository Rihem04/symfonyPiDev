{% extends 'admin/index.html.twig' %}


{% block admin %}
 <section class="content">
 <div class="row">

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>id_client</th>
				<th>Titre</th>
				<th>Description</th>
				<th>Competence</th>
				<th>Prix</th>
				<th>Etat</th>
				<th>DateLimite</th>
				<th>DateCreation</th>
				<th>IdFreelance</th>
				
			</tr>
		</thead>
		<tbody>
			{% for demande_client in demande_clients %}
				<tr>
					<td>{{ demande_client.id }}</td>
					<td>{{ demande_client.idClient }}</td>
					<td>{{ demande_client.titre }}</td>
					<td>{{ demande_client.description }}</td>
					<td>{{ demande_client.competence }}</td>
					<td>{{ demande_client.prix }}</td>
					<td>{{ demande_client.etat }}</td>
					<td>{{ demande_client.dateLimite ? demande_client.dateLimite|date('Y-m-d') : '' }}</td>
					<td>{{ demande_client.dateCreation ? demande_client.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ demande_client.idFreelance }}</td>
					
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="{{path('sort_demande_by_date')}}" class="btn btn-primary">Trier par date</a>

	
    </div>
</section>
{% endblock %}
