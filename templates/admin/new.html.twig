{% extends 'admin/index.html.twig' %}
{% block admin %}
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">


					<div class="card">
						<div class="card-header">
							<h3 class="card-title">Ajouter un utilisateur</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

		
								{{ form_row(form.nom,{'attr':{'placeholder':'écrivez votre nom'}}) }}
								{{ form_row(form.prenom,{'attr':{'placeholder':'écrivez votre prénom'}}) }}

								{{ form_row(form.mail,{'label':'adresse email ','attr':{'placeholder':'écriver votre mail'}}) }}
								{{ form_row(form.password,{'attr':{'placeholder':'écrivez votre mot de passe'}}) }}
								{{ form_row(form.numero_telephone,{'attr':{'placeholder':'écrivez votre numéro de téléphone'}}) }}
								
								{{ form_row(form.addresse,{'attr':{'placeholder':'écrivez votre adresse'}}) }}
                                {{ form_row(form.image,{'attr':{'placeholder':'inserer votre image'}}) }}
                                
								<button type="submit"  class="btn btn-warning btn-block">ajouter</button>
								{{ form_end(form) }}
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
{% endblock %}
